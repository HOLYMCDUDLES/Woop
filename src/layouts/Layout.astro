---
import '@fontsource/space-grotesk';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="DJ and Music Producer Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-music-dark text-white font-sans">
		<nav class="fixed w-full bg-music-dark/90 backdrop-blur-sm z-50 py-4">
			<div class="container mx-auto px-4">
				<ul class="flex justify-center space-x-8">
					<li><a href="#home" class="hover:text-music-accent transition-colors">Home</a></li>
					<li><a href="#music" class="hover:text-music-accent transition-colors">Music</a></li>
					<li><a href="#shows" class="hover:text-music-accent transition-colors">Shows</a></li>
					<li><a href="#contact" class="hover:text-music-accent transition-colors">Contact</a></li>
				</ul>
			</div>
		</nav>
		<slot />
	</body>
</html>